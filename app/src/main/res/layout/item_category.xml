<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_height"
    android:layout_margin="@dimen/usual_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/usual_margin"
        android:ellipsize="end"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="Here is some text" />


    <CheckBox
        android:id="@+id/category_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/usual_margin"
        android:clickable="false" />

</android.support.v7.widget.CardView>